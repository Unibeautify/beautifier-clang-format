{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es6",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
          "@src": ["src"],
          "@test/*": ["test/*"]
        }
    },
    "exclude": [
        "node_modules",
        "./dist/"
    ]
}